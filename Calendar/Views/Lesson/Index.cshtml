<div class="row">
    <div class="container">
        @if (User.IsInRole(Calendar.Utility.Helper.Admin))
        {
        <div class="row">
            <div class="form-group col-4" id="divDoctorList">
                <label>Wybierz Nauczyciela</label>
                @Html.DropDownList("teacherId", new SelectList(ViewBag.TeacherList, "Id", "Name"), new
                {
                    @class = "form-control select2"
                         ,
                    @onchange = "onTeacherChange();"
                })
